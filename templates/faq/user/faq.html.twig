{% extends 'base.html.twig' %}

{% block title %}{{titre_page}}{% endblock %}

{% block body %}
    <h1 class="bloc">{{ titre_page }}</h1>
    <div class="row bloc">
        <div class="col-12 col-sm-12 col-xl-7">
            <h2>Foire aux questions</h2>
                             
            <div class="categories">
                {% for categorie_faq in categoriesFaq %}
                    <h3>{{categorie_faq.nomCategorie}}</h3>
                    {% if categorie_faq.faqs == null %}
                    <div class="rubriques bloc">
                        <p class="no_faq">Pas de rubrique dans cette catégorie</p>
                    </div>
                    {% else %}
                    <div class="row bloc" >
                        <div class="col">
                            {% for rubrique in categorie_faq.faqs %}
                                <div class="rubrique row">
                                    
                                    <div class="detail_rubrique col-12 col-sm-12 col-xl-12">

                                            <h3 class="titre_probleme" >{{rubrique.titreProbleme}}</h3>
                                            
                                            <p class="description_probleme">{{rubrique.descriptionProbleme}}</p>
                                            <p class="date_probleme">{{rubrique.dateProbleme|date('d/m/Y')}}</p>
                                        {#
                                            <video class="lien_tutoriel" controls poster>
                                                <source src={{rubrique.lienTutoriel}} type="video/mp4">
                                                <p>Votre navigateur ne prend pas en charge les vidéos HTML5.
                                                Voici <a href={{rubrique.lienTutoriel}}> un lien pour télécharger la vidéo</a>.
                                                </p>
                                            </video>
                                        #}

                                    </div>                            
                                </div> 
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="nous_contacter col-12 col-sm-12 col-xl-4">
            <form class="formulaire">
                <h3>Nous Contacter</h3>
                <p> vous n'avez pas trouvé de solution parmis celles proposées?<p>
                <input type="text" class="form-control form-text bg-light" placeholder="Nom : DUPOND">
                <input type="text" class="form-control form-text bg-light" placeholder="Prénom : Richard">
                <input type="email" class="form-control form-text bg-light" placeholder="Email : name@exemple.com">
                <input type="text" class="form-control form-text bg-light" placeholder="Sujet : Comment ajouter une annonce">
                <textarea class="col form-control form-text bg-light" id="message" name="message" rows="10" cols="50">
                    
                </textarea>
                <div class="row image_objet">
                    <label class="col-3 form-label col-form-label-lg" >Images :</label>
                    <input class="col espace_haut" type="file" id="image" name="image">
                </div>
                <div class="bouton">
                    <button type="button" class="haut_bouton btn btn-lg btn-outline-success">Envoyé</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
