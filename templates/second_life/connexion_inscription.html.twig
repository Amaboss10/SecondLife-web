{% extends 'base.html.twig' %}

{% block title %}{{titre_page}}{% endblock %}

{% block body %}
    <div class="row justify-content-around" style="margin:1%">
        <div class="connexion col-xl-5 col-sm-12 col-12 " style=" margin:2%; padding:1%">
            <h3  style="padding-bottom:0.5%">{{sous_titre_connexion}}<h3>
            <div class= "col-8" style="margin:auto;text-align: center; margin-top:25%; margin-bottom:25%">
                <input type="email" class="form-control form-tex0 bg-light" placeholder="Email : name@exemple.com">
                <input type="password" class="form-control form-text bg-light" placeholder="Mot de passe">
                <br>
                <button type="button" class="btn btn-lg btn-outline-success">Se connecter</button> 
            </div>
        </div>
        <div class="inscription col-xl-5 col-sm-12 col-12" style=" margin:2%; padding:1%">
            <h3  style="padding-bottom:0.5%">{{sous_titre_inscription}}<h3>
            <div class="col-8" style="margin: auto; margin-top:6%; margin-bottom:6%">
                <label class="form-label col-form-label-sm">Civilité  : </label>
                <input type="radio"  id="femme" name="genre" value="femme">
                <label for="female" class="form-label col-form-label-sm">Madame</label>
                <input type="radio"  id="homme" name="genre" value="homme">
                <label for="male" class="form-label col-form-label-sm">Monsieur</label><br>
                <input type="text" class="form-control form-text bg-light" placeholder="Nom : DUPOND">
                <input type="text" class="form-control form-text bg-light" placeholder="Prénom : Richard">
                <div class="row" style=" padding:auto;">
                    <label class="col-4 form-label col-form-label-sm" style=" margin:0px; padding-top:2%; padding-left:5%; text-align:left;">Date de naissance </label>
                    <input type="date" class="col-7 form-label col-form-label-sm bg-light" id="anniversaire" name="anniversaire" style="margin:0px; margin-top:1%">
                </div>
                <input type="email" class="form-control form-text bg-light" placeholder="Email : name@exemple.com"  style="padding-top:0%">
                <input type="password" class="form-control form-text bg-light" placeholder="Mot de passe">
                <p style="font-size:xx-small"> Minimum 8 caractères avec au moins 1 Majuscule, 1 caractère spécial, 1 chiffre</p>
                <p style="font-size:x-small"> En cliquant sur "S'incrire", vous acceptez les conditions générales d'utilisation, les conditions générales de vente et la politique de confidentialité de SecondLife.</p>
                <br>
                <div style="text-align: center">
                    <button type="button" class="btn btn-lg btn-outline-success" >S'inscrire</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
