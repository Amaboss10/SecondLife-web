<form method="post" action="{{ path('secondLife_admin_supprimer_categorieFaq', {'id': categorie_faq.id}) }}" onsubmit="return confirm('voulez vous supprimer la categorie '.categorie_faq.nomCategorie.'?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie_faq.id) }}">
    <div style="text-align:left; margin-top:0%; margin-bottom:1%">
        <button class="btn btn-lg btn-outline-success ">Supprimer</button>
    </div>
</form>
