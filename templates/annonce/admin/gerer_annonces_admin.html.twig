{% extends 'base_admin.html.twig' %}

{% block title %}{{titre_page}}{% endblock %}

{% block body %}

<style>
    .column {
        float: right;
        width: 32%;
        text-align: left;
    }

    .separateur {
        height: 10px;
    }
</style>
<div>
    <h1 class="col-sm-12">{{ titre_page }}</h1>
    <div class="row">
        <div class="row">
            <div class="tri row">
                <div class="col-xl-2 col-sm-4 col-12">
                {#TRI#}
                    <form>
                        <label class="form-label col-form-label-sm">Tier par :</label>
                        <select id="tri" class="form-control form-select form-select-sm" name="tri">
                            <option value="prix_croissant">Prix Croissant</option>
                            <option value="prix_decroissant">Prix Décroissant</option>
                            <option value="plus_recent">Plus Récent</option>
                            <option value="plus_ancien">Plus Ancien</option>
                        </select>
                        <br>
                    </form>
                </div>
            </div>

            <div class="annonces row">
                <h3 class="nb_annonces">{{nb_annonces}} annonces</h3>
                {% for annonce in annonces %}
                <div class="annonce col-md-4">
                    <div class="panel" style="border: 1px solid grey">
                        <div class="row" style="margin-right: 2px">
                            <h6>{{annonce.titreAnnonce}}</h6>
                                
                            <div class="images_annonce column">
                                <div class="panel" style="margin: 1px">
                                    <div class="panel-body"><img src="https://placehold.it/130x130?text=IMG" class="img-responsive"
                                                alt="Image">
                                    </div>
                                </div>
                            </div>

                            <div class="info_annonce column" style="margin-top: 3px">
                                <h6>{{annonce.categorie}}</h6>
                                <h6>{{annonce.sousCategorie}}</h6>
                                <h6>{{annonce.marque}}</h6>
                                <h6>Prix : {{annonce.prixAnnonce}}</h6>
                                <h6>Publié le {{annonce.datePubliAnnonce|date("m/d/Y")}}</h6>
                            </div>

                            <div class="btns_annonce column" style="margin-top: 20px">
                                <form action={{ path('secondLife_admin_afficher_annonce',{'id':annonce.idAnnonce}) }} method='GET'>
                                    <button class="btn btn-outline-dark btn-sm" type="submit" formaction={{ path('secondLife_admin_afficher_annonce',{'id':annonce.idAnnonce}) }} style="width: 100%">Afficher </button>
                                </form>
                                    
                                {% if not annonce.estValide %}
                                <form action={{ path('secondLife_admin_valider_annonce',{'id':annonce.idAnnonce}) }} method='GET'>
                                    <button class="btn btn-outline-dark btn-sm" type="submit" formaction={{ path('secondLife_admin_valider_annonce',{'id':annonce.idAnnonce}) }} style="width: 100%">Valider </button>
                                </form>
                                {% endif %}

                                {{ include('annonce/_delete_form.html.twig') }}
            
                            </div>
                        </div>
                    </div>
                </div>    
