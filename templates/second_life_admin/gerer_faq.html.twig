{% extends 'base_admin.html.twig' %}

{% block title %}{{titre_page}}{% endblock %}

{% block body %}
    <h1>{{ titre_page }}</h1>
    <a href={{path('secondLife_admin_ajouter_faq')}} class="ajouter_rubrique"><button class="btn_crud">Ajouter une rubrique</button></a>
    
    <div class="rubriques">
    {% if rubriques==null %}
        <p class="no_faq">Pas de rubrique FAQ/Aide</p>
    {% endif %}
    {% for rubrique in rubriques %}
        <div class="rubrique">
            <button class="titre_rubrique">{{rubrique.titreProbleme}}</button>
            
            <div class="detail_rubrique" >
                <h3 class="titre_probleme">{{rubrique.titreProbleme}}</h3>
                
                <p class="description_probleme">{{rubrique.descriptionProbleme}}</p>
                
                <p class="solution_probleme">{{rubrique.solutionProbleme}}</p>
                
                <video class="lien_tutoriel" controls poster>
                    <source src={{rubrique.lienTutoriel}} type="video/mp4">
                    <p>Votre navigateur ne prend pas en charge les vidéos HTML5.
                        Voici <a href={{rubrique.lienTutoriel}}> un lien pour télécharger la vidéo</a>.
                    </p>
                </video>
                
                <div class="btns_crud">
                    <a href={{path('secondLife_admin_modifier_faq',{'id':rubrique.id})}} class="modifier_rubrique"><button class="btn_crud">Modifier la rubrique</button></a>
                    <a href={{path('secondLife_admin_supprimer_faq',{'id':rubrique.id})}} class="supprimer_rubrique"><button class="btn_crud">Supprimer la rubrique</button></a>
                </div>
            </div>
        </div> 
    {% endfor %}
    </div>
    

{% endblock %}
