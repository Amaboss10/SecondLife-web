{% extends 'base_admin.html.twig' %}

{% block title %}{{titre_page}}{% endblock %}

{% block body %}
    <h1>{{ titre_page }}</h1>
    <div class="row">
        <h3 class="col-6 col-sm-9 col-xl-6">Les rubriques</h3>
        <a href={{path('secondLife_admin_ajouter_faq')}} class="ajouter_rubrique col-xl-2 col-sm-3 col-6"><button class="btn_crud btn-sm btn-outline-success "  type="button">Ajouter une rubrique</button></a>
    </div>
    <div class="rubriques">
    {% if rubriques==null %}
        <p class="no_faq">Pas de rubrique FAQ/Aide</p>
    {% endif %}
    {% for rubrique in rubriques %}
        <div class="rubrique row">
           
            <button class="titre_rubriquebtn btn-sm btn-outline-secondary col-2 col-sm-2 col-xl-2" type="button">{{rubrique.titreProbleme}}</button>
            
            <div class="detail_rubrique col-12 col-sm-8 col-xl-9  " >
                <h3 class="titre_probleme">{{rubrique.titreProbleme}}</h3>
                
                <p class="description_probleme">{{rubrique.descriptionProbleme}}</p>
                
                <p class="solution_probleme">{{rubrique.solutionProbleme}}</p>
                
                <video class="lien_tutoriel" controls poster>
                    <source src={{rubrique.lienTutoriel}} type="video/mp4">
                    <p>Votre navigateur ne prend pas en charge les vidéos HTML5.
                        Voici <a href={{rubrique.lienTutoriel}}> un lien pour télécharger la vidéo</a>.
                    </p>
                </video>
                
                <div class="btns_crud">
                    <a href={{path('secondLife_admin_modifier_faq',{'id':rubrique.id})}} class="modifier_rubrique"><button class="btn_crud btn-sm btn-outline-success" type="button">Modifier la rubrique</button></a>
                    <a href={{path('secondLife_admin_supprimer_faq',{'id':rubrique.id})}} class="supprimer_rubrique"><button class="btn_crud btn-sm btn-outline-success" type="button">Supprimer la rubrique</button></a>
                </div>
            </div>
        </div> 
    {% endfor %}
    </div>
    

{% endblock %}
