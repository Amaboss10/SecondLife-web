<form method="post" action="{{ path('secondLife_admin_supprimer_marque', {'id': marque.id}) }}" onsubmit="return confirm('Voulez-vous supprimer la marque'.$marque.nomMarque.'?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ marque.id) }}">
    
     <div style="text-align:left; margin-top:0%; margin-bottom:1%">
        <button class="btn btn-lg btn-outline-success ">Supprimer</button>
    </div>
</form>
