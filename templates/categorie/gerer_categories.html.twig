{% extends 'base_admin.html.twig' %}

{% block title %}{{titre_page}}{% endblock %}

{% block body %}
    <h1>{{titre_page}}</h1>
    
    <a href="{{ path('secondLife_admin_creer_categorie') }}">Créer une catégorie</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom_categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.nomCategorie }}</td>
                <td>
                    <a href="{{ path('secondLife_admin_afficher_annonces_par_categorie', {'id': categorie.id}) }}">Afficher les annonces de {{categorie.nomCategorie}}</a>
                    <a href="{{ path('secondLife_admin_afficher_sous_categories_par_categorie', {'id': categorie.id}) }}">Afficher les sous-categories de {{categorie.nomCategorie}}</a>
                    <a href="{{ path('secondLife_admin_modifier_categorie', {'id': categorie.id}) }}">Modifier la categorie {{categorie.nomCategorie}}</a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" style="margin-top:10%; text-align:center">Il n y a aucune catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('secondLife_admin_creer_categorie') }}">Créer une catégorie</a>
{% endblock %}
