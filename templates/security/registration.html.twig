{% extends 'base.html.twig' %}

{% block body %} 
    
    <div class="row justify-content-around" style="margin:1%">
        <div class="inscription col-xl-6 col-sm-12 col-12" style=" margin:2%; padding:1%">
            <h3  style="padding-bottom:0.5%">{{sous_titre_inscription}}<h3>
            <div class="col-8" style="margin: auto; margin-top:6%; margin-bottom:6%">
                
                {{ form_start(formInscription) }}

                {{form_label(formInscription.nom_personne,"Nom:",{'label_attr':{'class':' form-label col-form-label-sm '}})}}
                {{form_errors(formInscription.nom_personne)}}
                {{form_widget(formInscription.nom_personne,{'attr':{'class':'form-control form-text bg-light'}})}}
                

                {{form_label(formInscription.prenom_personne,"Prenom:",{'label_attr':{'class':' form-label col-form-label-sm ',}})}}
                {{form_errors(formInscription.prenom_personne)}}
                {{form_widget(formInscription.prenom_personne,{'attr':{'class':' form-control form-text bg-light'}})}}
               
                
                {{form_label(formInscription.mail_personne,"Mail:",{'label_attr':{'class':' form-label col-form-label-sm '}})}}
                {{form_errors(formInscription.mail_personne)}}
                {{form_widget(formInscription.mail_personne,{'attr':{'class':' form-control form-text bg-light'}})}}
               
                
                {{form_label(formInscription.mdp_personne,"Mot de passe:",{'label_attr':{'class':' form-label col-form-label-sm '}})}}
                {{form_errors(formInscription.mdp_personne)}}
                {{form_widget(formInscription.mdp_personne,{'attr':{'class':' form-control form-text bg-light'}})}}
               


                <p style="font-size:xx-small"> Minimum 8 caractères avec au moins 1 Majuscule, 1 caractère spécial, 1 chiffre</p>
                <p style="font-size:x-small"> En cliquant sur "S'incrire", vous acceptez les conditions générales d'utilisation, les conditions générales de vente et la politique de confidentialité de SecondLife.</p>
                    {{form_label(formInscription.verif_mdp_personne,"Confirmation du mot de passe :",{'label_attr':{'class':' form-label col-form-label-sm ','style':'padding-bottom:0.5%'}})}}
                    {{form_errors(formInscription.verif_mdp_personne)}}
                    {{form_widget(formInscription.verif_mdp_personne,{'attr':{'class':'form-control form-text bg-light'}})}}
                <br>
                
                {{form_label(formInscription.pseudo_user,"Pseudo:",{'label_attr':{'class':' form-label col-form-label-sm '}})}}
                {{form_errors(formInscription.pseudo_user)}}
                {{form_widget(formInscription.pseudo_user,{'attr':{'class':' form-control form-text bg-light'}})}}
                
                
                {{form_label(formInscription.adresse_user,"Adresse:",{'label_attr':{'class':' form-label col-form-label-sm '}})}}
                {{form_errors(formInscription.adresse_user)}}
                {{form_widget(formInscription.adresse_user,{'attr':{'class':' form-control form-text bg-light'}})}}
                

                {{form_label(formInscription.date_naiss_user,"Date de naissance:",{'label_attr':{'class':' form-label col-form-label-sm ',}})}}
                {{form_errors(formInscription.date_naiss_user)}}
                {{form_widget(formInscription.date_naiss_user,{'attr':{'class':' form-control form-text bg-light'}})}}
               

                
                {{form_label(formInscription.lien_image_personne,"Photo de profil:",{'label_attr':{'class':' form-label col-form-label-sm '}})}}
                {{form_errors(formInscription.lien_image_personne)}}
                {{form_widget(formInscription.lien_image_personne,{'attr':{'class':' form-control form-text'}})}}
                

                <div style="text-align: center">
                    <input type="submit" class="btn btn-lg btn-outline-success" value="Inscription" style="margin-top:4%">
                </div>
                {{ form_end(formInscription) }}

            </div>
        </div>
    </div>

{% endblock %}